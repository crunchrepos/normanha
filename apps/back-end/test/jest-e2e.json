{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./",
  "moduleNameMapper": {
    "src/modules/(.*)": "<rootDir>/src/modules/$1",
    "src/config/(.*)": "<rootDir>/src/config/$1",
    "src/mocks/(.*)": "<rootDir>/src/mocks/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}